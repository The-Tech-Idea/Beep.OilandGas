<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Beep.OilandGas.PPDM39\Beep.OilandGas.PPDM39.csproj" />
    <ProjectReference Include="..\Beep.OilandGas.Models\Beep.OilandGas.Models.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Embed CSV seed data JSON as resource (optional - will be generated by tool) -->
    <EmbeddedResource Include="Core\SeedData\PPDMCSVData.json" Condition="Exists('Core\SeedData\PPDMCSVData.json')" />
  </ItemGroup>

  <ItemGroup>
    <!-- Embed all JSON metadata files as resources -->
    <EmbeddedResource Include="Core\Metadata\PPDM39SubjectAreasAndModules.json" />
    <EmbeddedResource Include="Core\Metadata\PPDM39TableToModuleMapping.json" />
    <EmbeddedResource Include="Core\Metadata\ppdm38tabledescr.json" />
    <EmbeddedResource Include="Core\Metadata\PPDM39Metadata.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Beep.OilandGas.PPDM.Models" Version="1.0.6" />
    <PackageReference Include="TheTechIdea.Beep.AssemblyLoader" Version="2.0.15" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementEngine" Version="2.0.55" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementModels" Version="2.0.108" />
    <PackageReference Include="TheTechIdea.Beep.DMLogger" Version="2.0.3" />
    <PackageReference Include="TheTechIdea.Beep.JsonLoader" Version="2.0.4" />
  </ItemGroup>

</Project>

