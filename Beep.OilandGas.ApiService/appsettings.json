{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Beep": {
    "ConfigPath": "Config",
    "ContainerName": "PPDM39ApiContainer",
    "LoadAssemblies": true,
    "EnableAutoMapping": true
  },
  "ConnectionStrings": {
    "PPDM39": "PPDM39"
  },
  "IdentityServer": {
    "Authority": "https://localhost:7062/",
    "Audience": "beep-api"
  },
  "DemoDatabase": {
    "StoragePath": "./demos",
    "RetentionDays": 7,
    "CleanupSchedule": "0 2 * * *",
    "Enabled": true,
    "DefaultSeedOption": "reference-sample"
  }
}
