@page "/ppdm39/exploration/seismic-surveys"
@using Beep.OilandGas.PPDM39.Models
@inject ApiClient ApiClient
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject NavigationManager NavigationManager

<PageTitle>Seismic Surveys - Exploration</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">Seismic Surveys</MudText>

    <MudPaper Class="pa-4">
        <MudStack Row="true" AlignItems="Center" Justify="Justify.SpaceBetween" Class="mb-4">
            <MudText Typo="Typo.h6">Seismic Surveys for Current Field</MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenCreateDialog">
                Add Survey
            </MudButton>
        </MudStack>

        @if (_isLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        }
        else if (_surveys != null && _surveys.Any())
        {
            <MudTable Items="@_surveys" Hover="true" Dense="true" Striped="true">
                <HeaderContent>
                    <MudTh>Survey ID</MudTh>
                    <MudTh>Survey Name</MudTh>
                    <MudTh>Survey Type</MudTh>
                    <MudTh>Acquisition Date</MudTh>
                    <MudTh>Actions</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Survey ID">@GetPropertyValue(context, "SEISMIC_SURVEY_ID")</MudTd>
                    <MudTd DataLabel="Survey Name">@GetPropertyValue(context, "SURVEY_NAME")</MudTd>
                    <MudTd DataLabel="Survey Type">@GetPropertyValue(context, "SURVEY_TYPE")</MudTd>
                    <MudTd DataLabel="Acquisition Date">@FormatDate(GetPropertyValue(context, "ACQUISITION_DATE"))</MudTd>
                    <MudTd DataLabel="Actions">
                        <MudButtonGroup Variant="Variant.Text" Size="Size.Small">
                            <MudButton StartIcon="@Icons.Material.Filled.Visibility" OnClick="@(() => ViewSurveyLines(context))">
                                View Lines
                            </MudButton>
                            <MudButton StartIcon="@Icons.Material.Filled.Edit" OnClick="@(() => OpenEditDialog(context))">
                                Edit
                            </MudButton>
                        </MudButtonGroup>
                    </MudTd>
                </RowTemplate>
            </MudTable>
        }
        else
        {
            <MudAlert Severity="Severity.Info">No seismic surveys found for the current field.</MudAlert>
        }
    </MudPaper>
</MudContainer>

@code {
    private List<SEIS_ACQTN_SURVEY>? _surveys;
    private bool _isLoading = false;
    private string? _currentUserId = "system"; // TODO: Get from authentication context

    protected override async Task OnInitializedAsync()
    {
        await LoadSurveys();
    }

    private async Task LoadSurveys()
    {
        _isLoading = true;
        try
        {
            _surveys = await ApiClient.GetAsync<List<SEIS_ACQTN_SURVEY>>("/api/field/current/exploration/seismic-surveys");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading seismic surveys: {ex.Message}", Severity.Error);
            _surveys = new List<SEIS_ACQTN_SURVEY>();
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task OpenCreateDialog()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<SeismicSurveyEditDialog>("Create Seismic Survey", options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is Dictionary<string, object> surveyData)
        {
            try
            {
                var created = await ApiClient.PostAsync<object, Dictionary<string, object>>(
                    "/api/field/current/exploration/seismic-surveys",
                    surveyData,
                    new { userId = _currentUserId });
                
                Snackbar.Add("Seismic survey created successfully", Severity.Success);
                await LoadSurveys();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error creating seismic survey: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task OpenEditDialog(object survey)
    {
        var surveyId = GetPropertyValue(survey, "SEISMIC_SURVEY_ID");
        if (string.IsNullOrEmpty(surveyId))
            return;

        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var parameters = new DialogParameters { ["Survey"] = survey };
        var dialog = await DialogService.ShowAsync<SeismicSurveyEditDialog>("Edit Seismic Survey", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is Dictionary<string, object> surveyData)
        {
            Snackbar.Add("Edit functionality will be available in the API controller", Severity.Info);
            await LoadSurveys();
        }
    }

    private async Task ViewSurveyLines(object survey)
    {
        var surveyId = GetPropertyValue(survey, "SEISMIC_SURVEY_ID");
        if (string.IsNullOrEmpty(surveyId))
            return;

        NavigationManager.NavigateTo($"/ppdm39/exploration/seismic-surveys/{surveyId}/lines");
    }

    private string GetPropertyValue(object obj, string propertyName)
    {
        if (obj is IDictionary<string, object> dict && dict.ContainsKey(propertyName))
        {
            return dict[propertyName]?.ToString() ?? "N/A";
        }
        return "N/A";
    }

    private string FormatDate(string? dateStr)
    {
        if (string.IsNullOrEmpty(dateStr) || dateStr == "N/A")
            return "N/A";

        if (DateTime.TryParse(dateStr, out var date))
            return date.ToString("yyyy-MM-dd");

        return dateStr;
    }
}
