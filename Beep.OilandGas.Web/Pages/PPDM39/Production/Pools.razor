@page "/ppdm39/production/pools"
@inject ApiClient ApiClient
@inject ISnackbar Snackbar

<PageTitle>Pools - PPDM39</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudText Typo="Typo.h4" Class="mb-4">Pools</MudText>
    
    <MudPaper Class="pa-4">
        @if (_isLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-4" />
        }
        
        @if (_pools != null && _pools.Any())
        {
            <MudTable Items="@_pools" Hover="true" Dense="true">
                <HeaderContent>
                    <MudTh>Pool ID</MudTh>
                    <MudTh>Pool Name</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Pool ID">@GetPropertyValue(context, "POOL_ID")</MudTd>
                    <MudTd DataLabel="Pool Name">@GetPropertyValue(context, "POOL_NAME")</MudTd>
                </RowTemplate>
            </MudTable>
        }
    </MudPaper>
</MudContainer>

@code {
    private List<object>? _pools;
    private bool _isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadPools();
    }

    private async Task LoadPools()
    {
        _isLoading = true;
        try
        {
            _pools = await ApiClient.GetAsync<List<object>>("/api/production/pools");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading pools: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private string GetPropertyValue(object obj, string propertyName)
    {
        var prop = obj.GetType().GetProperty(propertyName);
        return prop?.GetValue(obj)?.ToString() ?? "N/A";
    }
}



