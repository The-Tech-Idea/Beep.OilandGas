@page "/ppdm39/production/fields"
@inject ApiClient ApiClient
@inject ISnackbar Snackbar

<PageTitle>Fields - PPDM39</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudText Typo="Typo.h4" Class="mb-4">Fields</MudText>
    
    <MudPaper Class="pa-4">
        @if (_isLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-4" />
        }
        
        @if (_fields != null && _fields.Any())
        {
            <MudTable Items="@_fields" Hover="true" Dense="true">
                <HeaderContent>
                    <MudTh>Field ID</MudTh>
                    <MudTh>Field Name</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Field ID">@GetPropertyValue(context, "FIELD_ID")</MudTd>
                    <MudTd DataLabel="Field Name">@GetPropertyValue(context, "FIELD_NAME")</MudTd>
                </RowTemplate>
            </MudTable>
        }
    </MudPaper>
</MudContainer>

@code {
    private List<object>? _fields;
    private bool _isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadFields();
    }

    private async Task LoadFields()
    {
        _isLoading = true;
        try
        {
            _fields = await ApiClient.GetAsync<List<object>>("/api/production/fields");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading fields: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private string GetPropertyValue(object obj, string propertyName)
    {
        var prop = obj.GetType().GetProperty(propertyName);
        return prop?.GetValue(obj)?.ToString() ?? "N/A";
    }
}


