@page "/ppdm39/production/forecasts"
@using Beep.OilandGas.Models.Data
@using Beep.OilandGas.Models.Core.Interfaces
@using Beep.OilandGas.Client.App
@inject IBeepOilandGasApp BeepApp
@inject ApiClient ApiClient
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<PageTitle>Production Forecasts - Production</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">Production Forecasts</MudText>

    <MudPaper Class="pa-4">
        <MudStack Row="true" AlignItems="Center" Justify="Justify.SpaceBetween" Class="mb-4">
            <MudText Typo="Typo.h6">Production Forecasts for Current Field</MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenCreateDialog">
                Create Forecast
            </MudButton>
        </MudStack>

        @if (_isLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        }
        else if (_forecasts != null && _forecasts.Any())
        {
            <MudTable Items="@_forecasts" Hover="true" Dense="true" Striped="true">
                <HeaderContent>
                    <MudTh>Forecast ID</MudTh>
                    <MudTh>Forecast Name</MudTh>
                    <MudTh>Forecast Type</MudTh>
                    <MudTh>Start Date</MudTh>
                    <MudTh>End Date</MudTh>
                    <MudTh>Status</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Forecast ID">@GetPropertyValue(context, "FORECAST_ID")</MudTd>
                    <MudTd DataLabel="Forecast Name">@GetPropertyValue(context, "FORECAST_NAME")</MudTd>
                    <MudTd DataLabel="Forecast Type">@GetPropertyValue(context, "FORECAST_TYPE")</MudTd>
                    <MudTd DataLabel="Start Date">@GetPropertyValue(context, "START_DATE")</MudTd>
                    <MudTd DataLabel="End Date">@GetPropertyValue(context, "END_DATE")</MudTd>
                    <MudTd DataLabel="Status">@GetPropertyValue(context, "FORECAST_STATUS")</MudTd>
                </RowTemplate>
            </MudTable>
        }
        else
        {
            <MudAlert Severity="Severity.Info">No production forecasts found for the current field.</MudAlert>
        }
    </MudPaper>
</MudContainer>

@code {
    private List<ProductionForecastResultDto>? _forecasts;
    private bool _isLoading = false;
    private string? _currentUserId = "system"; // TODO: Get from authentication context

    protected override async Task OnInitializedAsync()
    {
        await LoadForecasts();
    }

    private async Task LoadForecasts()
    {
        _isLoading = true;
        try
        {
            // Try to load from API endpoint if it exists, otherwise use empty list
            // The service client doesn't have a method to list all forecasts yet
            var forecasts = await ApiClient.GetAsync<List<ProductionForecastResultDto>>("/api/production/field/forecasts");
            _forecasts = forecasts ?? new List<ProductionForecastResultDto>();
        }
        catch (Exception ex)
        {
            // If endpoint doesn't exist, start with empty list
            _forecasts = new List<ProductionForecastResultDto>();
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task OpenCreateDialog()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<ProductionForecastDialog>("Create Production Forecast", options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is Dictionary<string, object> forecastData)
        {
            try
            {
                // Extract forecast parameters from dialog
                var forecastMethod = forecastData.ContainsKey("FORECAST_TYPE") ? forecastData["FORECAST_TYPE"]?.ToString() ?? "Exponential" : "Exponential";
                var forecastPeriod = 12; // Default 12 months, could be from dialog
                var fieldId = (string?)null; // Could be from current field context
                var wellUWI = (string?)null; // Could be selected from dialog

                // Generate forecast using service client
                var forecast = await CalculationService.GenerateForecastAsync(wellUWI, fieldId, forecastMethod, forecastPeriod);
                
                // Save the forecast
                var saved = await CalculationService.SaveForecastAsync(forecast, _currentUserId);
                
                if (saved)
                {
                    Snackbar.Add("Production forecast created and saved successfully", Severity.Success);
                    await LoadForecasts();
                }
                else
                {
                    Snackbar.Add("Forecast generated but failed to save", Severity.Warning);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error creating production forecast: {ex.Message}", Severity.Error);
            }
        }
    }

    private string GetPropertyValue(ProductionForecastResultDto forecast, string propertyName)
    {
        return propertyName switch
        {
            "FORECAST_ID" => forecast.ForecastId,
            "FORECAST_NAME" => $"Forecast {forecast.ForecastMethod}",
            "FORECAST_TYPE" => forecast.ForecastMethod,
            "START_DATE" => forecast.ForecastDate.ToString("yyyy-MM-dd"),
            "END_DATE" => forecast.ForecastPoints.Any() ? forecast.ForecastPoints.Last().Date.ToString("yyyy-MM-dd") : "N/A",
            "FORECAST_STATUS" => forecast.Status ?? "Active",
            _ => "N/A"
        };
    }

    private string FormatDate(string? dateStr)
    {
        if (string.IsNullOrEmpty(dateStr) || dateStr == "N/A")
            return "N/A";

        if (DateTime.TryParse(dateStr, out var date))
            return date.ToString("yyyy-MM-dd");

        return dateStr;
    }
}
